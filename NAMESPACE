useDynLib("memuse",
  R_meminfo_retvals,
  R_meminfo_raminfo,
  R_meminfo_swapinfo,
  R_meminfo_procinfo,
  R_meminfo_cacheinfo_size,
  R_meminfo_cacheinfo_linesize,
  R_meminfo_filesize,
  R_meminfo_system_uptime,
  R_meminfo_process_uptime
)

import(methods)

exportClasses("memuse")

exportMethods(
  ### Constructors
  "mu", "memuse", "object.size",
  ### Accessors
  "size", "unit", "unit.prefix", "unit.names",
  ### Replacers
  "size<-", "unit<-", "unit.prefix<-", "unit.names<-",
  ### Printing
  "print", "show", 
  ### Swaps
  "swap.unit", "swap.prefix", "swap.names",
  ### howmany's
  "howmany", "howmany.par",
  ### Misc
  "as.memuse"#, "as.numeric"
)

### System utilities
exportPattern("^Sys\\.[[:alpha:]]+")

export(
  ### Constructor
  memuse, mu,
  ### Arithmetic
  "+", "-", "*", "/", "^", 
  ### Misc
  print, howbig, howbig.par, howmany, howmany.par,
  ### Approx stuff
  approx.size,
  ### Times
  wc.time, print.timing,
  print.sysinfo
)
